
size 640 480 

camera 0 4 13 0 0 0 0 1 0 45

# lighting/material definitions
# for initial testing, you should get the geometry right
# you may want to use dummy (constant) shading, ignoring these lines

attenuation 1 0.0 0.0

texture ./scenes/a/dog1.png
texture ./scenes/a/earth.png

#directional 1 -1 0 1 0 0 
point 1 7 5 1 1 1
point -1 7 5 1 1 1
diffuse 0.3 0.3 0.3 
specular 0.0 0.0 0.0
shininess 0

maxverts 4 

vertexTex +4 0 +4 1 1
vertexTex +4 0 -4 0 1
vertexTex -4 0 +4 1 0
vertexTex -4 0 -4 0 0 

pushTransform

bindTexture 0
ambient 0.1 0.1 0.1
diffuse 0.3 0.3 0.3
triTex 0 1 2
triTex 1 3 2

ambient 0.2 0.2 0.2
triTex 0 1 2
triTex 1 3 2

unbindTexture



popTransform
pushTransform



bindTexture 1

diffuse 0 1 1 
popTransform
pushTransform
#translate -1.5 .8 0.65
translate 0 0 0
sphere -2.5 2.8 0.65 1.5

unbindTexture

